<%= form_for([@issue, @comment], :remote => true) do |f| %>
  <%= hidden_field_tag :page_id, @page.id %>
  <div class="form-group">
    <%= f.text_area :body, :rows => "6", :cols => "60" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit "Add Comment", :class => "btn btn-default" %>
  </div>
<% end %>
