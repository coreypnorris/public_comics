$('#comment-<%= @comment.id %>-votes-num').empty();
$('#comment-<%= @comment.id %>-votes-num').append('<%= pluralize((@comment.get_upvotes.size - @comment.get_downvotes.size), 'point', 'points') %>');

if ('<%= current_user.voted_up_on? @comment %>' == 'true') {
  $('#comment-<%= @comment.id %>-upvote').removeClass("btn-primary");
  $('#comment-<%= @comment.id %>-upvote').addClass("btn-success");
}
else if('<%= current_user.voted_up_on? @comment %>' == 'false') {
  $('#comment-<%= @comment.id %>-upvote').removeClass("btn-success");
  $('#comment-<%= @comment.id %>-upvote').addClass("btn-primary");
}

if ('<%= current_user.voted_down_on? @comment %>' == 'true') {
  $('#comment-<%= @comment.id %>-downvote').removeClass("btn-primary");
  $('#comment-<%= @comment.id %>-downvote').addClass("btn-danger");
}
else if('<%= current_user.voted_down_on? @comment %>' == 'false') {
  $('#comment-<%= @comment.id %>-downvote').removeClass("btn-danger");
  $('#comment-<%= @comment.id %>-downvote').addClass("btn-primary");
}
