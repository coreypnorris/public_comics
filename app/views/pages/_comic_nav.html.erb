<%= form_tag issue_page_path, :method => :get, :class => "form-inline", :role => "form" do %>
  <% unless @page === @issue.pages.first %>
    <%= link_to issue_page_path(@issue, @page.id-1), data: { keybinding: "left" }, :class => "btn btn-default" do %>
      <i class="glyphicon glyphicon-chevron-left"></i>
    <% end %>
  <% end %>
  <%= collection_select(:page, :id, @issue.pages, :id, :number, {}, {:class => 'form-control', :onchange => "this.form.submit()"}) %>
  <% unless @page === @issue.pages.last %>
    <%= link_to issue_page_path(@issue, @page.id+1), data: { keybinding: "right" }, :class => "btn btn-default" do %>
      <i class="glyphicon glyphicon-chevron-right"></i>
    <% end %>
  <% end %>
  <%= link_to "Thumbnails", issue_pages_path(@issue), :class => "form-control btn btn-default" %>
  <%= link_to "#{@issue.title.genre.name}", genre_path(@issue.title.genre), :class => "form-control btn btn-default" %>
  <%= submit_tag('Go to Page', style: "position: absolute; left: -9999px; width: 1px; height: 1px;") %>
<% end %>
