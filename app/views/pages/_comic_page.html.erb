<% if @page === @issue.pages.first %>

  <p><
  <%= link_to ">", issue_page_path(@issue, @page.id+1), data: { keybinding: "right" }, class: "btn btn-xs btn-primary" %></p>
  <%= form_tag issue_page_path, :method => :get do %>
    <p><%= collection_select(:page, :id, @issue.pages, :id, :number) %></p>
    <p><%= submit_tag('Go to Page', :class => "form-group") %></p>
  <% end %>

<% elsif @page === @issue.pages.last %>

  <p><%= link_to "<", issue_page_path(@issue, @page.id-1), data: { keybinding: "left" }, class: "btn btn-xs btn-primary" %>></p>
  <%= form_tag issue_page_path, :method => :get do %>
    <p><%= collection_select(:page, :id, @issue.pages, :id, :number) %></p>
    <p><%= submit_tag('Go to Page', :class => "form-group") %></p>
  <% end %>

<% else %>

  <p><%= link_to "<", issue_page_path(@issue, @page.id-1), data: { keybinding: "left" }, class: "btn btn-xs btn-primary" %>
     <%= link_to ">", issue_page_path(@issue, @page.id+1), data: { keybinding: "right" }, class: "btn btn-xs btn-primary" %></p>
  <%= form_tag issue_page_path, :method => :get do %>
    <p><%= collection_select(:page, :id, @issue.pages, :id, :number) %></p>
    <p><%= submit_tag('Go to Page', :class => "form-group") %></p>
  <% end %>

<% end %>
